<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/skill_level_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/skill_name"/>
    <TextView
        android:id="@+id/skill_name"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/skill_edi_btn"
        android:layout_toRightOf="@id/skill_level_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/txt_0c"
        android:lines="1"
        android:singleLine="true"
        />
    <ImageButton
        android:id="@+id/skill_edi_btn"
        android:layout_toLeftOf="@id/skill_del_btn"
        android:layout_alignBottom="@id/skill_name"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginHorizontal="10dp"
        android:background="#0000"
        android:src="@drawable/ic_wrench_solid"
        android:scaleType="fitEnd"/>
    <ImageButton
        android:id="@+id/skill_del_btn"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/skill_name"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="#0000"
        android:src="@drawable/ic_trash_solid"
        android:scaleType="fitEnd"/>

</RelativeLayout>