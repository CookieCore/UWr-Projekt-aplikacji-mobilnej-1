<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_0c"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_0c"
            android:textSize="40sp"
            android:gravity="center"
            android:text="@string/Login"
            android:layout_marginHorizontal="20dp"/>
        <EditText
            android:id="@+id/login_email_editText"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:backgroundTint="@color/txt_0c"
            android:textColor="@color/txt_1c"
            android:textSize="20sp"
            android:hint="@string/Email"
            android:textColorHint="@color/txt_2c"
            android:layout_marginHorizontal="20dp"/>
        <EditText
            android:id="@+id/login_password_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:backgroundTint="@color/txt_0c"
            android:textColor="@color/txt_1c"
            android:textSize="20sp"
            android:hint="@string/Password"
            android:textColorHint="@color/txt_2c"
            android:layout_marginHorizontal="20dp"/>
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/Login"
            android:textSize="20sp"
            android:textColor="@color/txt_1c"
            android:backgroundTint="@color/bg_2c"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/otherLoginMethods"
            android:textColor="@color/txt_0c"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/loginWith_twitter_btn"
                android:src="@drawable/ic_twitter_brands"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:text="@string/Login"
                android:textSize="20sp"
                android:backgroundTint="@color/loginTwitter_0c"
                android:layout_marginHorizontal="5dp"/>
            <ImageButton
                android:id="@+id/loginWith_facebook_btn"
                android:src="@drawable/ic_facebook_brands"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:text="@string/Login"
                android:textSize="20sp"
                android:backgroundTint="@color/loginFacebook_0c"
                android:layout_marginHorizontal="5dp"/>
            <ImageButton
                android:id="@+id/loginWith_google_btn"
                android:src="@drawable/ic_google_brands"
                android:scaleType="fitCenter"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:text="@string/Login"
                android:textSize="20sp"
                android:backgroundTint="@color/loginGoogle_0c"
                android:layout_marginHorizontal="5dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/createAccount_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createAccount"
            android:textSize="15sp"
            android:textColor="@color/txtAccent_0c"
            android:background="none"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/forgotPassword_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgotPassword"
            android:textSize="15sp"
            android:textColor="@color/txtAccent_0c"
            android:background="none"
            android:layout_marginHorizontal="20dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>